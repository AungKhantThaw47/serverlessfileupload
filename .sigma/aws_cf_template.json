{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "This template creates the stack for project ServerlessFileUpload. Generated by Sigma",
  "Parameters": {
    "lambdaCodeBucketParameter": {
      "Type": "String",
      "Description": "Name of the S3 bucket containing the Lambda deployment package"
    },
    "lambdaCodeKeyParameter": {
      "Type": "String",
      "Description": "S3 key of the Lambda deployment package"
    }
  },
  "Outputs": {
    "httpApigFileUploaderAPIRoutePUTupload": {
      "Description": "URL of FileUploaderAPI/upload:PUT endpoint",
      "Value": {
        "Fn::Join": [
          "",
          [
            "https://",
            {
              "Ref": "httpApigFileUploaderAPI"
            },
            ".execute-api.",
            {
              "Ref": "AWS::Region"
            },
            ".amazonaws.com",
            "/test",
            "/upload"
          ]
        ]
      }
    },
    "ServerlessFileUpload": {
      "Description": "ARN of Lambda function ServerlessFileUpload",
      "Value": {
        "Fn::GetAtt": [
          "ServerlessFileUpload",
          "Arn"
        ]
      }
    }
  },
  "Resources": {
    "httpApigFileUploaderAPI": {
      "Type": "AWS::ApiGatewayV2::Api",
      "Properties": {
        "Description": "An HTTP API generated by Sigma",
        "Name": "FileUploaderAPI",
        "ProtocolType": "HTTP"
      }
    },
    "httpApigFileUploaderAPIStage": {
      "Type": "AWS::ApiGatewayV2::Stage",
      "Properties": {
        "ApiId": {
          "Ref": "httpApigFileUploaderAPI"
        },
        "Description": "Stage of API",
        "StageName": "test",
        "AutoDeploy": true
      }
    },
    "s3fileUploadBucketUdith": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "file-upload-bucket-udith"
      }
    },
    "ServerlessFileUpload": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": "ServerlessFileUpload",
        "Description": "Invokes functions defined in ServerlessFileUpload.js in project ServerlessFileUpload. Generated by Sigma.",
        "Code": {
          "S3Bucket": {
            "Ref": "lambdaCodeBucketParameter"
          },
          "S3Key": {
            "Ref": "lambdaCodeKeyParameter"
          }
        },
        "MemorySize": 128,
        "Handler": "ServerlessFileUpload.handler",
        "Timeout": 60,
        "Runtime": "nodejs10.x",
        "Layers": [],
        "TracingConfig": {
          "Mode": "PassThrough"
        },
        "Role": {
          "Fn::GetAtt": [
            "ServerlessFileUploadExecutionRole",
            "Arn"
          ]
        },
        "Environment": {
          "Variables": {
            "SIGMA_AWS_ACC_ID": {
              "Ref": "AWS::AccountId"
            }
          }
        }
      }
    },
    "ServerlessFileUploadExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
        ],
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              }
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "ServerlessFileUploadPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:PutObject"
                  ],
                  "Resource": "arn:aws:s3:::file-upload-bucket-udith/*"
                }
              ]
            }
          }
        ]
      }
    },
    "httpApigFileUploaderAPIIntegrationServerlessFileUpload": {
      "Type": "AWS::ApiGatewayV2::Integration",
      "Properties": {
        "ApiId": {
          "Ref": "httpApigFileUploaderAPI"
        },
        "Description": "Integration of function: ServerlessFileUpload to HTTP API: FileUploaderAPI",
        "IntegrationType": "AWS_PROXY",
        "PayloadFormatVersion": "2.0",
        "IntegrationUri": {
          "Fn::GetAtt": [
            "ServerlessFileUpload",
            "Arn"
          ]
        }
      }
    },
    "httpApigFileUploaderAPIRoutePUTupload": {
      "Type": "AWS::ApiGatewayV2::Route",
      "DependsOn": [
        "httpApigFileUploaderAPIIntegrationServerlessFileUpload"
      ],
      "Properties": {
        "ApiId": {
          "Ref": "httpApigFileUploaderAPI"
        },
        "RouteKey": "PUT /upload",
        "AuthorizationType": "NONE",
        "Target": {
          "Fn::Join": [
            "/",
            [
              "integrations",
              {
                "Ref": "httpApigFileUploaderAPIIntegrationServerlessFileUpload"
              }
            ]
          ]
        }
      }
    },
    "httpApigFileUploaderAPIRoutePUTuploadPermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "Action": "lambda:InvokeFunction",
        "FunctionName": {
          "Ref": "ServerlessFileUpload"
        },
        "SourceArn": {
          "Fn::Sub": [
            "arn:aws:execute-api:${AWS::Region}:${AWS::AccountId}:${__ApiId__}/*/${__Method__}${__Path__}",
            {
              "__Method__": "PUT",
              "__Path__": "/upload",
              "__ApiId__": {
                "Ref": "httpApigFileUploaderAPI"
              }
            }
          ]
        },
        "Principal": "apigateway.amazonaws.com"
      }
    }
  }
}